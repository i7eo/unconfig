{
  "extends": ["@unconfig/ts-config/web.json", "./tsconfig.paths.json"],
  "compilerOptions": {
    "outDir": "dist"
  },
  "include": [
    "./apps/**/*",
    "./apps/**/*.json",
    "./apps/**/typings/**/*",
    "./apps/**/.vitepress/**/*",
    "./apps/**/*.md"
  ],
  "exclude": [
    "**/__tests__/**",
    "**/tests/**",
    "node_modules",
    "**/dist",
    "**/*.config.*"
  ],
  "vueCompilerOptions": {
    "vitePressExtensions": [".md"]
  }
}
