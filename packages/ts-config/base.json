{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "TSConfig Base",
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",

    "moduleResolution": "node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,

    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "outDir": "dist"
  }
}
